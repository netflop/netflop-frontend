{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "error",
    "comma-dangle": "error",
    "no-trailing-spaces": "error",
    "eqeqeq": "error",
    "eol-last": "error",
    "no-extra-semi": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1
      }
    ],
    "no-magic-numbers": "off",
    "jsx-quotes": ["error", "prefer-single"],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-unused-expressions": "error"
  }
}
